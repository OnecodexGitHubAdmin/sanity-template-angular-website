{
  "version": 2,
  "title": "Angular starter template for Netlify or others",
  "description": "Angular starter template in an nx workspace using tailwindcss and scully.io. Includes deployment on Netlify. This can be changed as well",
  "previewMedia": {
    "type": "image",
    "src": "assets/template-logo.png",
    "alt": "Angular Starter Template"
  },
  "technologies": [
    {
      "id": "angular",
      "name": "Angular",
      "url": "https://angular.io/"
    },
    {
      "id": "nx",
      "name": "NX Dev Tools",
      "url": "https://nx.dev/"
    },
    {
      "id": "scully",
      "name": "Scully.io",
      "url": "https://scully.io/"
    },
    {
      "id": "tailwind",
      "name": "tailwind CSS",
      "url": "https://tailwindcss.com/"
    }
  ],  
  "deployment": {
    "provider": "netlify",
    "sites": [
      {
        "id": "studio",
        "type": "studio",
        "title": "Sanity Studio",
        "description": "The Sanity Studio is where you edit and structure your content.",
        "dir": "./apps/studio",
        "previewMedia": {
          "type": "image",
          "src": "assets/path-to-image.png",
          "alt": "Sanity Studio"
        },
        "requirements": ["build-hook"],
        "buildSettings": {
          "base": "apps/studio",
          "dir": "dist",
          "cmd": "npm run build && cp netlify.toml dist"
        }
      },
      {
        "id": "site",
        "type": "web",
        "title": "Pre-rendered angular client",
        "description": "This is your final website. It is built with angular and rendered using scully.io",
        "dir": "./apps/web",
        "buildSettings": {
          "base": "/",
          "dir": "/dist/static",
          "cmd": "npm run scully"
        },
        "requirements": ["build-hook"],
        "previewMedia": {
          "type": "image",
          "src": "assets/path-to-image.png",
          "alt": "Pre-rendered angular client"
        }          
      }
    ]
  }
}